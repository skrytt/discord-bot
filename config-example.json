{
  "logging": {
    "version": 1,
    "formatters": {
      "console": {
        "format": "%(message)s"
      },
      "file": {
        "format": "%(asctime)s %(levelname)-8s %(name)-15s %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "console"
      },
      "file": {
        "filename": "discord-bot.log",
        "class": "logging.FileHandler",
        "level": "DEBUG",
        "formatter": "file"
      }
    },
    "root": {
      "level": "DEBUG",
      "handlers": ["console", "file"]
    }
  },

